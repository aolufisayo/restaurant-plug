<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewRestaurantRowOrder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRestaurantNameRowOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageViewDeleteOrder"
        app:layout_constraintStart_toEndOf="@+id/imageViewRestaurantRowOrder"
        app:layout_constraintTop_toTopOf="@+id/imageViewRestaurantRowOrder" />

    <TextView
        android:id="@+id/textViewMenusRowOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewRestaurantNameRowOrder"
        app:layout_constraintStart_toStartOf="@+id/textViewRestaurantNameRowOrder"
        app:layout_constraintTop_toBottomOf="@+id/textViewRestaurantNameRowOrder" />

    <TextView
        android:id="@+id/textViewPriceRowOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/textViewMenusRowOrder"
        app:layout_constraintTop_toBottomOf="@+id/textViewMenusRowOrder" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewDeleteOrder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRestaurantRowOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewRestaurantRowOrder"
        app:srcCompat="@drawable/ic_delete"
        app:tint="@android:color/holo_red_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRestaurantRowOrder" />

</androidx.constraintlayout.widget.ConstraintLayout>