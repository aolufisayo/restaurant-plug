<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/checkBoxRowMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewRowMenu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMenuRowMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="Tandoori Chicken"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewRowMenu"
        app:layout_constraintStart_toEndOf="@+id/checkBoxRowMenu"
        app:layout_constraintTop_toTopOf="@+id/imageViewRowMenu" />

    <TextView
        android:id="@+id/textViewDescriptionRowMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:text="Descrition"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewMenuRowMenu"
        app:layout_constraintStart_toStartOf="@+id/textViewMenuRowMenu"
        app:layout_constraintTop_toBottomOf="@+id/textViewMenuRowMenu" />

    <TextView
        android:id="@+id/textViewPriceRowMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Descrition"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewMenuRowMenu"
        app:layout_constraintStart_toStartOf="@+id/textViewMenuRowMenu"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionRowMenu" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRowMenu" />

</androidx.constraintlayout.widget.ConstraintLayout>